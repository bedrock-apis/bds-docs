{
   "compilerOptions": {
      "target": "es2022",
      "module": "ES2022",
      "moduleResolution": "node10",
      "outDir": "./dist",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "allowJs": true,
      "checkJs": true,
      "skipLibCheck": true,
      "noUncheckedIndexedAccess": true
   },
   "include": ["src/**/*.ts", "script-api/**/*", "test-runner"],
   "exclude": ["src/flags/ts-declarations/bin/**/*"]
}
